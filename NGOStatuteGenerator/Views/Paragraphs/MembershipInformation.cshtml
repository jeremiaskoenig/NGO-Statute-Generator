@model Statute
@{
}

<div class="row">
    <div class="col-xs-12">
        Wer kann Mitglied werden?
    </div>
</div>
@foreach (string option in Program.PersonTypes)
{
    <div class="row">
        <div class="col-xs-offset-3 col-xs-1">
            <input type="checkbox" class="personTypes_checkbox" value="@option" onclick="reassignPersons()" />
        </div>
        <div class="col-xs-6">
            @option
        </div>
    </div>
}

<div class="row">
    <div class="col-sm-3">
        Soll ein Beitrag erhoben werden?
    </div>
    <div class="col-md-2 col-sm-3">
        <button type="button" id="feeRequired" onclick="toggleMembershipFeeInfo(true)" checked="true">Ja</button>
    </div>
    <div class="col-md-2 col-sm-3">
        <input type="number" asp-for="MembershipInformation.MembershipFee.Amount" />
    </div>
    <div class="col-md-2 col-sm-3">
        <select value="@Model.MembershipInformation.MembershipFee.Period">
            @foreach (var option in Program.FeePeriodTypes)
            {
                <option value="@option">@option</option>
            }
        </select>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <h4>Mitgliederversammlung</h4>
    </div>
</div>
<div class="row">
    <div class="col-xs-3">
        Beschlussfähigkeit:
    </div>
    <div class="col-xs-9">
        <select>
            <option>Jede ordentliche Mitgliederversammlung ist beschlussfähig</option>
            <option>Mitgliederversammlungen sind ab ... Teinehmern beschlussfähig</option>
        </select>
    </div>
</div>

<div class="row">
    <div class="col-xs-3">
        Können sich Mitglieder vertreten lassen?
    </div>
    <div class="col-xs-3">
        <button type="button" id="canBeRepresented" onclick="toggleRepresentation(true)" checked="true">Ja</button>
    </div>
    <div class="col-xs-3">
        <button type="button" id="cannotBeRepresented" onclick="toggleRepresentation(false)">Nein</button>
    </div>
</div>


