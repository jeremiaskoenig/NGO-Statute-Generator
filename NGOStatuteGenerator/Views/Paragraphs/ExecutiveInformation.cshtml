@model ExecutiveInformation
@{
}

<div class="container">
    <div class="row">
        <div class="col-lg-3">
            Der Gesamtvorstand besteht aus
        </div>
        <div class="col-sm-6">
            @foreach (string executiveType in Program.ExecutiveTypes)
            {
                <div class="row">
                    <div class="col-sm-1">
                        <input type="checkbox" value="@executiveType" />
                    </div>
                    <div class="col-sm-10">
                        @executiveType
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">

        </div>
        <div class="col-sm-6">
            <textarea placeholder="Weitere Personen"></textarea>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            Der Vorstand besteht aus
        </div>
        <div class="col-sm-6">
            @foreach (string executiveType in Program.ExecutiveTypes)
            {
                <div class="row">
                    <div class="col-sm-1">
                        <input type="checkbox" value="@executiveType" />
                    </div>
                    <div class="col-sm-10">
                        @executiveType
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
        </div>
        <div class="col-sm-6">
            <textarea placeholder="Weitere Personen"></textarea>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-10">
            <h5>Beirat</h5>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-1">
            <input type="checkbox" />
        </div>
        <div class="col-sm-9">
            Wählbar sind nur Vereinsmitglieder, die dem Verein mindestens zwei Kalenderjahre angehören.
        </div>
    </div>
    <div class="row">
        <div class="col-lg-1">
            <input type="checkbox" />
        </div>
        <div class="col-sm-8">
            Die Mitglieder (oder eine bestimmte Anzahl an Mitgliedern) des Beirats sollen Erfahrungen im Vereinszweck haben.
        </div>
        <div class="col-lg-3">
            <input type="number" placeholder="Personen mit Erfahrung im Vereinszweck" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-1">
            <input type="checkbox" />
        </div>
        <div class="col-lg-8">
            Soll der Vorstand verpflichtet werden, in allen wichtigen Angelegenheiten die Meinung des Beirats einzuholen?
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            Einladung per
        </div>
        <div class="col-lg-2">
            <button>Schriftlich</button>
        </div>
        <div class="col-lg-2">
            <button>E-Mail</button>
        </div>
        <div class="col-lg-2">
            <button>Fax</button>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            Häufigkeit
        </div>
        <div class="col-lg-2">
            <button>Vierteljährlich</button>
        </div>
        <div class="col-lg-2">
            <button>Halbjährlich</button>
        </div>
        <div class="col-lg-2">
            <button>Jährlich</button>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-3">
            Tagesordnung:
        </div>
        <div class="col-lg-2">
            <button>Notwendig</button>
        </div>
        <div class="col-lg-2">
            <button>Nicht notwendig</button>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            Frist (Wochen):
        </div>
        <div class="col-lg-2">
            <input type="number" />
        </div>
    </div>
</div>
